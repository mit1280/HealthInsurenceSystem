@model HealthInsurenceSystem.Models.Customer

<form method="post" asp-action="Index">
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-info pl-3">Buy New Policy</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Cemail">Email Address of Customer:</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Cemail" class="form-control" />
                        <span asp-validation-for="Cemail" class="text-danger"></span>
                    </div>

                </div>


                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Ptype">Select the Policy:</label>
                        </div>
                        <div class="col-8">
                            @Html.RadioButtonFor(m => m.Ptype, "Standard") Standard<br />
                            @Html.RadioButtonFor(m => m.Ptype, "Gold")Gold<br />
                            @Html.RadioButtonFor(m => m.Ptype, "Diamond")Diamond<br />
                            @Html.RadioButtonFor(m => m.Ptype, "Platinum")Platinum<br />
                            @Html.RadioButtonFor(m => m.Ptype, "Platinum")Super Platinum<br />
                        </div>

                    </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="alert alert-danger" role="alert">
                            <strong> *Check With Customer Before Submitting the application</strong>
                        </div>
                       

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Submit" />
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}