@model IEnumerable<HealthInsurenceSystem.Models.Customer>

<head>

    <title>
        Sold Policies Details
    </title>
</head>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Policies List</h2>
        </div>

    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {

        <table class="table table-bordered table-striped" style="width:100%">

            <thead>
                <tr>
                    <th>
                        Customer Email
                    </th>
                    <th>
                        Policy Number
                    </th>
                    <th>
                        Ptype
                    </th>
                    <th>
                        Sold Date
                    </th>
                    <th>
                        Last Payment Date
                    </th>
                    <th>
                        Monthly Amount
                    </th>
                    <th>
                        Remaining Duration
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="15%">@obj.Cemail</td>
                        <td width="10%">@obj.Pnumber</td>
                        <td width="10%">@obj.Ptype</td>
                        <td width="10%">@obj.Purchaseddate</td>
                        <td width="10%">@obj.Lastpayment</td>
                        <td width="10%">@obj.Amount</td>
                        <td width="10%">@obj.Duration</td>
                    </tr>
                }
            </tbody>
        </table>

        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-sm">Go to Home</a>
    }
    else
    {
        <p> No new Policy exists</p>
    }


</div>


