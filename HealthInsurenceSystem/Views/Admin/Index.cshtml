@model HealthInsurenceSystem.Models.Policy

<form method="post" asp-action="Index">
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Policy details</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Ptype">Policy Name</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Ptype" class="form-control" />
                        <span asp-validation-for="Ptype" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MonthPremium"> Monthly Premium </label>
                    </div>
                    <div class="col-8">
                        <input type="number" asp-for="MonthPremium" class="form-control" />
                        <span asp-validation-for="MonthPremium" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MinAge"> Minimum Age </label>
                    </div>
                    <div class="col-8">
                        <input type="number" asp-for="MinAge"  class="form-control" />
                        <span asp-validation-for="MinAge" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MaxAge">Maximum Age</label>
                    </div>
                    <div class="col-8">
                        <input type="number" asp-for="MaxAge" class="form-control" />
                        <span asp-validation-for="MaxAge" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Duration">Duration</label>
                    </div>
                    <div class="col-8">
                        <input type="number" asp-for="Duration" class="form-control" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Submit" />
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}