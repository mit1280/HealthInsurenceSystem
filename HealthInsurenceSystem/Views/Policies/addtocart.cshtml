@model HealthInsurenceSystem.Models.Interested

<h1>Policy Inquiry</h1>
<hr />
<hr />

<h2>Fill this details</h2>


<form method="post" asp-action="addtocart">

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Information</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Cemail">Email Address</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Cemail" class="form-control" />
                        <span asp-validation-for="Cemail" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Amount"> Your Budget </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Ptype"> Policy Name </label>
                    </div>
                    <div class="col-8">
                        <div class="col-8">
                            @Html.RadioButtonFor(m => m.Ptype, "Standard") Standard<br />
                            @Html.RadioButtonFor(m => m.Ptype, "Gold")Gold<br />
                            @Html.RadioButtonFor(m => m.Ptype, "Diamond")Diamond<br />
                            @Html.RadioButtonFor(m => m.Ptype, "Platinum")Platinum<br />
                            @Html.RadioButtonFor(m => m.Ptype, "Platinum")Super Platinum<br />
                        </div>
                    </div>

                </div>
                
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Submit" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

    </div>

</form>